datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}


model p2_posts {
  author_id  p2_users?
  content    String?
  created_at DateTime?
  post_id    Int       @id
  title      String
}

model p2_profiles {
  bio        String?
  profile_id Int     @id
  user_id    p2_users
}

model p2_users {
  email      String     @unique
  name       String?
  dept       Int? @default(value:0)
  user_id    Int        @id
  postses    p2_posts[]
  profileses p2_profiles[]
}